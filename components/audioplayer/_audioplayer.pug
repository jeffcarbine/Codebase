mixin audioplayer(filepath, title, allowDownload = false)
  .audio-player
    audio(id=id, controls, data-src=filepath)

    .controls
      .play-container
        .toggle-play.play
      .time
        .current --:--
        .slash
        .length
      .name #{title}
      .volume-container
        .volume-button
          i(data-icon="speaker")
          i(data-icon="mute")
        .volume-slider
          .volume-percentage
      if(allowDownload)
        .download-container
          button.
    .timeline(data-id=id)
      .progress